" config inspired by https://github.com/connermcd/dotfiles

hi tab default black
hi status default red
hi current default green
hi id default yellow
hi song default black

set window playlist
set autoscroll
set colour
set hlsearch
set searchwrap
set ignorecase
set sortignorethe
set sortignorecase
set mouse
set songformat {%a - %t}|{%f}$E$R [%l]
set local-music-dir ~/Music

map q ZQ
map Q ZQ
map <C-N> gt
map <C-P> gT
map gs :shuffle<C-M>
map ga :addall<C-M>:shuffle<C-M>
map 'a :findartist! 
map 'g :findgenre! 
map 'b :findalbum! 
map <BS> f
map = +

" vim: ft=vim
