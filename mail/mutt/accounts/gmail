set from = "martin.uzak@gmail.com"
set sendmail = "msmtp -a gmail"

# Set folders
set spoolfile = "+gmail/INBOX"
set mbox = "+gmail/archive"
set postponed = "+gmail/drafts"
set record = "+gmail/sent"
set trash = "+gmail/trash"

# custom signaure
set signature = ~/.mutt/signatures/default

color status white red

macro index <tab> "<shell-escape>mbsync gmail<enter>" "run mbsync to sync mail for this account"

macro index,pager a \
  "<save-message>+gmail/archive<enter>"  \
  "move message to the archive"

macro index,pager i \
  "<save-message>+gmail/INBOX<enter>"  \
  "move message to the inbox"
