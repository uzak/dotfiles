set from = "martin.uzak@prusa3d.cz"
set sendmail = "msmtp -a prusa"

# Set folders
set spoolfile = "+prusa/INBOX"
set mbox = "+prusa/archive"
set postponed = "+prusa/drafts"
set record = "+prusa/sent"
set trash = "+prusa/trash"

# custom signaure
set signature = ~/.mutt/signatures/default

color status black color214

macro index <tab> "<shell-escape>mbsync prusa<enter>" "run mbsync to sync mail for this account"

macro index,pager a \
  "<save-message>+prusa/archive<enter>"  \
  "move message to the archive"

macro index,pager i \
  "<save-message>+prusa/INBOX<enter>"  \
  "move message to the inbox"
