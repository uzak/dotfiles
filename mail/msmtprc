account gmail
tls on
auth on
host smtp.gmail.com
port 587
user martin.uzak@gmail.com
from martin.uzak@gmail.com
passwordeval "pass general/gmail-imap"
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account prusa
tls on
auth on
host smtp.gmail.com
port 587
user martin.uzak@prusa3d.cz
from martin.uzak@prusa3d.cz
passwordeval "pass general/prusa-imap"
tls_trust_file /etc/ssl/certs/ca-certificates.crt


account mailbox
host smtp.mailbox.org
port 465
protocol smtp
auth on
user uzak@mailbox.org
from martin.uzak@mailbox.org
tls on
tls_starttls off
passwordeval "pass general/mailbox.org"
tls_trust_file /etc/ssl/certs/ca-certificates.crt


account default: mailbox
