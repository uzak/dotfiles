account gmail
tls on
auth on
host smtp.gmail.com
port 587
user martin.uzak@gmail.com
from martin.uzak@gmail.com
passwordeval "cat ~/repos/dotfiles/mail/accounts/gmail.pass"
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account prusa
tls on
auth on
host smtp.gmail.com
port 587
user martin.uzak@prusa3d.cz
from martin.uzak@prusa3d.cz
passwordeval "cat ~/repos/dotfiles/mail/accounts/prusa.pass"
tls_trust_file /etc/ssl/certs/ca-certificates.crt


account mailbox
host smtp.mailbox.org
port 465
protocol smtp
auth on
user uzak@mailbox.org
from uzak@mailbox.org
tls on
tls_starttls off
passwordeval "cat ~/repos/dotfiles/mail/accounts/mailbox.pass"
tls_trust_file /etc/ssl/certs/ca-certificates.crt


account default: mailbox
